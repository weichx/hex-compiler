{
  "compilerOptions": {
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": false,
    "removeComments": true,
    "target": "ES6",
    "module": "commonjs",
    "stripInternal": true,
    "experimentalDecorators": true,
    "importHelpers": false,
    "noImplicitUseStrict": true
  }
}